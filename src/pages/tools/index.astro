<Layout title="Text Tools & Generators - Free Online Text Utilities">
  <div class="min-h-screen bg-gray-50 py-16 mx-auto">
    <!-- Hero Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-bold text-black mb-6">
          Free Text Tools & Generators
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Transform your text with our comprehensive collection of free online tools. 
          Generate stylish fonts, convert text, create symbols, and more.
        </p>
        
        <!-- Ad Space - Top Banner -->
        <div class="w-full h-24 bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg flex items-center justify-center mb-12">
          <span class="text-gray-500 text-sm">Advertisement Space - 728x90</span>
        </div>
      </div>

      <!-- Tools Grid -->
      <div class="space-y-16">
        {Object.entries(toolCategories).map(([categoryKey, tools]) => {
          const CategoryIcon = categoryIcons[categoryKey];
          const categoryTitle = categoryTitles[categoryKey];
          
          return (
            <section key={categoryKey} class="space-y-8">
              <!-- Category Header -->
              <div class="flex items-center space-x-4 mb-8">
                <div class="p-3 bg-black text-white rounded-lg">
                  <CategoryIcon className="w-8 h-8" />
                </div>
                <div>
                  <h2 class="text-3xl font-bold text-black">{categoryTitle}</h2>
                  <p class="text-gray-600">Professional tools for text transformation</p>
                </div>
              </div>

              <!-- Tools Grid -->
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {tools.map((tool, index) => {
                  const ToolIcon = tool.icon;
                  
                  return (
                    <a 
                      key={index}
                      href={tool.url}
                      class="group block p-6 bg-white border-2 border-gray-200 rounded-xl hover:border-black hover:shadow-lg transition-all duration-300"
                    >
                      <div class="flex items-start space-x-4">
                        <div class="p-3 bg-gray-100 group-hover:bg-black group-hover:text-white rounded-lg transition-colors duration-300">
                          <ToolIcon className="w-6 h-6" />
                        </div>
                        <div class="flex-1">
                          <h3 class="text-lg font-semibold text-black group-hover:text-black mb-2">
                            {tool.title}
                          </h3>
                          <p class="text-gray-600 text-sm leading-relaxed">
                            {tool.description}
                          </p>
                        </div>
                      </div>
                    </a>
                  );
                })}
              </div>

              
              {categoryKey !== 'nameGenerators' && (
                <div class="w-full h-32 bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg flex items-center justify-center my-12">
                  <span class="text-gray-500 text-sm">Advertisement Space - 728x90</span>
                </div>
              )}
            </section>
          );
        })}
      </div>

      <!-- Bottom Section -->
      <div class="mt-20 text-center">
        <div class="bg-gray-50 rounded-2xl p-12 mb-12">
          <h2 class="text-3xl font-bold text-black mb-6">
            Why Choose Our Text Tools?
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
            <div class="text-center">
              <div class="w-16 h-16 bg-black text-white rounded-full flex items-center justify-center mx-auto mb-4">
                <Zap className="w-8 h-8" />
              </div>
              <h3 class="text-xl font-semibold text-black mb-2">Lightning Fast</h3>
              <p class="text-gray-600">Instant text transformation with no delays</p>
            </div>
            <div class="text-center">
              <div class="w-16 h-16 bg-black text-white rounded-full flex items-center justify-center mx-auto mb-4">
                <Star className="w-8 h-8" />
              </div>
              <h3 class="text-xl font-semibold text-black mb-2">100% Free</h3>
              <p class="text-gray-600">All tools are completely free to use</p>
            </div>
            <div class="text-center">
              <div class="w-16 h-16 bg-black text-white rounded-full flex items-center justify-center mx-auto mb-4">
                <Globe className="w-8 h-8" />
              </div>
              <h3 class="text-xl font-semibold text-black mb-2">Universal</h3>
              <p class="text-gray-600">Works on all devices and platforms</p>
            </div>
          </div>
        </div>

        <!-- Final Ad Space -->
        <div class="w-full h-32 bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg flex items-center justify-center">
          <span class="text-gray-500 text-sm">Advertisement Space - 728x90</span>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Custom hover animations */
  .group:hover {
    transform: translateY(-2px);
  }
  
  /* Smooth transitions for all interactive elements */
  a, button, .group {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Focus states for accessibility */
  a:focus, button:focus {
    outline: 2px solid #000;
    outline-offset: 2px;
  }
</style>




