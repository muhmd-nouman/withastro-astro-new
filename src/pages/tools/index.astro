    <h1 class="text-4xl font-bold text-center mt-8 text-gray-800 py-8 mb-8">
      {t('tool.h1')}
    </h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-10 px-4">
      {tools.map((tool) => {
        const IconComponent = tool.Icon;
        return (
          <div class="bg-gray-50 border rounded-lg p-6">
            <a
              href={tool.href}
              title={tool.title}
              class="block text-center hover:transform hover:scale-105 transition duration-300"
            >
              <div class="flex justify-center mb-4">
                <IconComponent className="w-8 h-8 text-gray-700" />
              </div>
              <h2 class="text-2xl font-semibold text-gray-800 mb-3">
                {tool.title}
              </h2>
              <p class="text-gray-600">{tool.description}</p>
            </a>
          </div>
        )
      })}
    </div>
  </div>
  <div class="bg-gradient-to-b from-gray-100 to-white ">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
