---
import CharacterDetail from '@/components/CharacterDetails.astro';
import { getLangFromUrl } from '@/utils/i18n';
import { unicodeData } from '@/data/unicodeData';
import Layout from '@/layouts/Layout.astro';

export function getStaticPaths() {
  return unicodeData.map((char) => ({
    params: { code: char.code.toLowerCase() },
    props: { char },
  }));
}

const lang = getLangFromUrl(Astro.url);
const { char } = Astro.props;
const title = `Unicode ${char.code} - ${char.category} Symbol | Kopieren (${char.symbol})`;
const description =`${char.symbol} Unicode ${char.decimal}, bekannt als ${char.code}. Kopiere und f端ge ${char.code} ganz einfach f端r deine Bed端rfnisse ein. Perfekt f端r Formatierungstricks und mehr!`;

export const prerender = true;
---
<Layout title={title} description={description}>
  <CharacterDetail char={char} lang={lang} />
</Layout>