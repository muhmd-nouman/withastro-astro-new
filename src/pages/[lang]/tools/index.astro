      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-bold text-black mb-6">
          Free Text Tools & Generators
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Transform your text with our comprehensive collection of free online tools. 
          Generate stylish fonts, convert text, create symbols, and more.
        </p>
        
        <!-- Ad Space - Top Banner -->
        <div class="w-full h-24 bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg flex items-center justify-center mb-12">
          <span class="text-gray-500 text-sm">Advertisement Space - 728x90</span>
        </div>
      </div>

      <!-- Tools Grid -->
      <div class="space-y-16">
        {Object.entries(toolCategories).map(([categoryKey, tools]) => {
          const CategoryIcon = categoryIcons[categoryKey];
          const categoryTitle = categoryTitles[categoryKey];
          
          return (
            <section  class="space-y-8">
              <!-- Category Header -->
              <div class="flex items-center space-x-4 mb-8">
