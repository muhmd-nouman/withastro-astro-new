                </div>
              </div>

              <!-- Tools Grid -->
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {tools.map((tool, index) => {
                  const ToolIcon = tool.icon;
                  
                  return (
                    <a 
                      href={tool.url}
                      class="group block p-6 bg-white border-2 border-gray-200 rounded-xl hover:border-black hover:shadow-lg transition-all duration-300"
                 
                    >
                      <div class="flex items-start space-x-4">
                        <div class="p-3 bg-gray-100 group-hover:bg-black group-hover:text-white rounded-lg transition-colors duration-300">
