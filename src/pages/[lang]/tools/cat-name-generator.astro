---
import MainLayout from '@/layouts/Layout.astro';
import TextTransformer from '@/components/TextTransformer';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';


export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
    // Add more languages as needed
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export const prerender = true;
---

<MainLayout 
  title={t["catNameGenerator.title"]} 
  description={t["catNameGenerator.description"]}
>
  <TextTransformer 
    client:load
    title={t("catNameGenerator.component.title")}
    description={t("catNameGenerator.component.description")}
    transformType="catnames"
    placeholder={t("catNameGenerator.component.placeholder")}
    isGenerator={true}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          {t("catNameGenerator.about.title")}
        </h2>

        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t("catNameGenerator.about.p1")}</p>
          <p>{t("catNameGenerator.about.p2")}</p>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">
            {t("catNameGenerator.types.title")}
          </h3>
          <ul class="list-disc pl-5 space-y-2">
            {[0, 1, 2, 3, 4, 5].map(i => (
              <li>
                <strong>{t(`catNameGenerator.types.${i}.label`)}:</strong> {t(`catNameGenerator.types.${i}.example`)}
              </li>
            ))}
          </ul>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">
            {t("catNameGenerator.perfectFor.title")}
          </h3>
          <ul class="list-disc pl-5 space-y-2">
            {[0, 1, 2, 3, 4, 5].map(i => (
              <li>{t(`catNameGenerator.perfectFor.${i}`)}</li>
            ))}
          </ul>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">
            {t("catNameGenerator.tips.title")}
          </h3>
          <ul class="list-disc pl-5 space-y-2">
            {[0, 1, 2, 3, 4, 5].map(i => (
              <li>{t(`catNameGenerator.${i}.tips`)}</li>
            ))}
          </ul>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">
            {t("catNameGenerator.categories.title")}
          </h3>
          <div class="grid md:grid-cols-2 gap-4 text-sm">
            <div>
              <p><strong>{t("catNameGenerator.categories.classic.title")}:</strong></p>
              <ul class="list-disc pl-5 space-y-1">
                {[0, 1, 2].map(i => (
                  <li>{t(`catNameGenerator.categories.classic.${i}`)}</li>
                ))}
              </ul>
            </div>
            <div>
              <p><strong>{t("catNameGenerator.categories.modern.title")}:</strong></p>
              <ul class="list-disc pl-5 space-y-1">
                {[0, 1, 2].map(i => (
                  <li>{t(`catNameGenerator.categories.modern.${i}`)}</li>
                ))}
              </ul>
            </div>
          </div>

          <p class="mt-4">{t("catNameGenerator.footerText")}</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
