---
import MainLayout from '@/layouts/Layout.astro';
import TextTransformer from '@/components/TextTransformer';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';


export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
    // Add more languages as needed
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---

<MainLayout 
  title={t("toolCategory.fontGenerators.curvedFonts.title")} 
  description={t("toolCategory.fontGenerators.curvedFonts.description")}
>
  <TextTransformer 
    client:load
    title={t("toolCategory.fontGenerators.curvedFonts.title")} 
    description={t("curvedFonts.description")} 
    transformType="curved"
    placeholder={t("curvedFonts.input.placeholder")}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t("curvedFonts.about.title")}</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t("curvedFonts.about.p1")}</p>
          <p>{t("curvedFonts.about.p2")}</p>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("curvedFonts.effects.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("curvedFonts.effects.circleBackslash")}</li>
            <li>{t("curvedFonts.effects.enclosingCircle")}</li>
            <li>{t("curvedFonts.effects.enclosingSquare")}</li>
            <li>{t("curvedFonts.effects.enclosingDiamond")}</li>
            <li>{t("curvedFonts.effects.parenthesesWrapped")}</li>
            <li>{t("curvedFonts.effects.arcSymbols")}</li>
            <li>{t("curvedFonts.effects.smileCurves")}</li>
            <li>{t("curvedFonts.effects.frownCurves")}</li>
          </ul>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("curvedFonts.uses.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("curvedFonts.uses.logo")}</li>
            <li>{t("curvedFonts.uses.social")}</li>
            <li>{t("curvedFonts.uses.typography")}</li>
            <li>{t("curvedFonts.uses.decorative")}</li>
            <li>{t("curvedFonts.uses.artistic")}</li>
            <li>{t("curvedFonts.uses.username")}</li>
          </ul>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("curvedFonts.tips.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("curvedFonts.tips.shortText")}</li>
            <li>{t("curvedFonts.tips.testDevices")}</li>
            <li>{t("curvedFonts.tips.compatibility")}</li>
            <li>{t("curvedFonts.tips.combine")}</li>
          </ul>
          <p class="mt-4">{t("curvedFonts.note")}</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
