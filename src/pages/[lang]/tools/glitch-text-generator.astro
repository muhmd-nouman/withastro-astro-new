---
import MainLayout from '@/layouts/Layout.astro';
import TextTransformer from '@/components/TextTransformer';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---

<MainLayout 
  title={t('glitch.title')} 
  description={t('glitch.desc')}
>
  <TextTransformer 
    client:load
    title={t('glitch.title')} 
    description={t('glitch.tDesc')} 
    transformType="glitch"
    placeholder={t('glitch.placeholder')}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t('glitch.aboutTitle')}</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t('glitch.p1')}</p>
          <p>{t('glitch.p2')}</p>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t('glitch.effects.title')}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t('glitch.effects.1')}</li>
            <li>{t('glitch.effects.2')}</li>
            <li>{t('glitch.effects.3')}</li>
            <li>{t('glitch.effects.4')}</li>
            <li>{t('glitch.effects.5')}</li>
            <li>{t('glitch.effects.6')}</li>
          </ul>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t('glitch.uses.title')}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t('glitch.uses.1')}</li>
            <li>{t('glitch.uses.2')}</li>
            <li>{t('glitch.uses.3')}</li>
            <li>{t('glitch.uses.4')}</li>
            <li>{t('glitch.uses.5')}</li>
            <li>{t('glitch.uses.6')}</li>
          </ul>

          <p class="mt-4">{t('glitch.note')}</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
