---
import MainLayout from '@/layouts/Layout.astro';
import TextTransformer from '@/components/TextTransformer';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';


export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---

<MainLayout 
  title={t("gen.fancy.title")} 
  description={t("gen.fancy.desc")}
>
  <TextTransformer 
    client:load
    title={t("gen.fancy.title")} 
    description={t("gen.fancy.tDesc")} 
    transformType="fancy"
    placeholder={t("gen.fancy.placeholder")}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t("gen.fancy.aboutTitle")}</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t("gen.fancy.p1")}</p>
          <p>{t("gen.fancy.p2")}</p>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("gen.fancy.how.title")}</h3>
          <ol class="list-decimal pl-5 space-y-2">
            <li>{t("gen.fancy.how.1")}</li>
            <li>{t("gen.fancy.how.2")}</li>
            <li>{t("gen.fancy.how.3")}</li>
            <li>{t("gen.fancy.how.4")}</li>
          </ol>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("gen.fancy.uses.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("gen.fancy.uses.1")}</li>
            <li>{t("gen.fancy.uses.2")}</li>
            <li>{t("gen.fancy.uses.3")}</li>
            <li>{t("gen.fancy.uses.4")}</li>
            <li>{t("gen.fancy.uses.5")}</li>
          </ul>

          <p class="mt-4">{t("gen.fancy.note")}</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
