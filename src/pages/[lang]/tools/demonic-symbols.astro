---
import MainLayout from '@/layouts/Layout.astro';
import TextTransformer from '@/components/TextTransformer';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';


export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
    // Add more languages as needed
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---

<MainLayout 
  title={t("gen.demonic.title")} 
  description={t("gen.demonic.desc")}
>
  <TextTransformer 
    client:load
    title={t("gen.demonic.title")} 
    description={t("gen.demonic.tDesc")} 
    transformType="demonic"
    placeholder={t("gen.demonic.placeholder")}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t("gen.demonic.aboutTitle")}</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t("gen.demonic.p1")}</p>
          <p>{t("gen.demonic.p2")}</p>

          {/** Get all symbol translations at once */}
          {(() => {
            const symbols = t("gen.demonic.symbols");
            return (
              <>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{symbols.title}</h3>
                <ul class="list-disc pl-5 space-y-2">
                  <li>{symbols.pent}</li>
                  <li>{symbols.inv}</li>
                  <li>{symbols.occ}</li>
                  <li>{symbols.anc}</li>
                  <li>{symbols.wrap}</li>
                </ul>
              </>
            );
          })()}
          {/** Get all uses translations at once */}
          {(() => {
            const uses = t("gen.demonic.use");
            return (
              <>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{uses.title}</h3>
                <ul class="list-disc pl-5 space-y-2">
                  <li>{uses.horror}</li>
                  <li>{uses.novel}</li>
                  <li>{uses.halloween}</li>
                  <li>{uses.band}</li>
                  <li>{uses.game}</li>
                  <li>{uses.ui}</li>
                  <li>{uses.art}</li>
                  <li>{uses.story }</li>
                </ul>
              </>
            );
          })()}
          {/** Get all uses translations at once */}
          {(() => {
            const context = t("gen.demonic.context");
            return (
              <>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{context.title}</h3>
                <p>{context.desc}</p>
                <ul class="list-disc pl-5 space-y-2">
                  <li>{context.manuscript}</li>
                  <li>{context.alchemy}</li>
                  <li>{context.religion}</li>
                  <li>{context.arch}</li>
                  <li>{context.folk}</li>
                </ul>
              </>
            );
          })()}

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("gen.demonic.warnTitle")}</h3>
          <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
            <p class="text-yellow-800 dark:text-yellow-200">
              {t("gen.demonic.warn")}
            </p>
          </div>

          {/** Get all uses translations at once */}
          {(() => {
            const tips = t("gen.demonic.tips");
            return (
              <>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{tips.title}</h3>
                <ul class="list-disc pl-5 space-y-2">
                  <li>{tips.sparing}</li>
                  <li>{tips.titleTip}</li>
                  <li>{tips.theme}</li>
                  <li>{tips.audience}</li>
                  <li>{tips.compat}</li>
                </ul>

                <p class="mt-4">{t("gen.demonic.note")}</p>
              </>
            );
          })()}
        </div>
      </div>
    </div>
  </div>
</MainLayout>
