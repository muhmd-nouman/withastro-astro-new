---
import MainLayout from '@/layouts/Layout.astro';
import TextTransformer from '@/components/TextTransformer';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---

<MainLayout 
  title={t('quirks.title')} 
  description={t('quirks.desc')}
>
  <TextTransformer 
    client:load
    title={t('quirks.title')} 
    description={t('quirks.tDesc')} 
    transformType="quirks"
    placeholder={t('quirks.placeholder')}
    isGenerator={true}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t('quirks.aboutTitle')}</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t('quirks.p1')}</p>
          <p>{t('quirks.p2')}</p>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t('quirks.types.title')}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t('quirks.types.1')}</li>
            <li>{t('quirks.types.2')}</li>
            <li>{t('quirks.types.3')}</li>
            <li>{t('quirks.types.4')}</li>
            <li>{t('quirks.types.5')}</li>
            <li>{t('quirks.types.6')}</li>
            <li>{t('quirks.types.7')}</li>
            <li>{t('quirks.types.8')}</li>
          </ul>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t('quirks.uses.title')}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t('quirks.uses.1')}</li>
            <li>{t('quirks.uses.2')}</li>
            <li>{t('quirks.uses.3')}</li>
            <li>{t('quirks.uses.4')}</li>
            <li>{t('quirks.uses.5')}</li>
            <li>{t('quirks.uses.6')}</li>
            <li>{t('quirks.uses.7')}</li>
          </ul>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t('quirks.why.title')}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t('quirks.why.1')}</li>
            <li>{t('quirks.why.2')}</li>
            <li>{t('quirks.why.3')}</li>
            <li>{t('quirks.why.4')}</li>
            <li>{t('quirks.why.5')}</li>
          </ul>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t('quirks.using.title')}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t('quirks.using.1')}</li>
            <li>{t('quirks.using.2')}</li>
            <li>{t('quirks.using.3')}</li>
            <li>{t('quirks.using.4')}</li>
            <li>{t('quirks.using.5')}</li>
          </ul>

          <p class="mt-4">{t('quirks.cta')}</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
