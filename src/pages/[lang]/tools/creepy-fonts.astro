---
import MainLayout from '@/layouts/Layout.astro';
import TextTransformer from '@/components/TextTransformer';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';


export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
    // Add more languages as needed
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---

<MainLayout 
  title={t("toolCategory.creepyFonts.title")} 
  description={t("toolCategory.creepyFonts.description")}
>
  <TextTransformer 
    client:load
    title={t("toolCategory.fontGenerators.creepyFonts.title")} 
    description={t("creepyFonts.description")} 
    transformType="creepy"
    placeholder={t("creepyFonts.input.placeholder")}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t("creepyFonts.about.title")}</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t("creepyFonts.about.p1")}</p>
          <p>{t("creepyFonts.about.p2")}</p>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("creepyFonts.effects.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("creepyFonts.effects.substitutions")}</li>
            <li>{t("creepyFonts.effects.zalgo")}</li>
            <li>{t("creepyFonts.effects.strikethrough")}</li>
            <li>{t("creepyFonts.effects.slash")}</li>
            <li>{t("creepyFonts.effects.skull")}</li>
            <li>{t("creepyFonts.effects.ghost")}</li>
            <li>{t("creepyFonts.effects.spider")}</li>
            <li>{t("creepyFonts.effects.randomCase")}</li>
          </ul>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("creepyFonts.perfectFor.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("creepyFonts.perfectFor.halloween")}</li>
            <li>{t("creepyFonts.perfectFor.movies")}</li>
            <li>{t("creepyFonts.perfectFor.stories")}</li>
            <li>{t("creepyFonts.perfectFor.haunted")}</li>
            <li>{t("creepyFonts.perfectFor.games")}</li>
            <li>{t("creepyFonts.perfectFor.art")}</li>
            <li>{t("creepyFonts.perfectFor.creepypasta")}</li>
            <li>{t("creepyFonts.perfectFor.socialMedia")}</li>
          </ul>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("creepyFonts.typography.title")}</h3>
          <p>{t("creepyFonts.typography.intro")}</p>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("creepyFonts.typography.films")}</li>
            <li>{t("creepyFonts.typography.lit")}</li>
            <li>{t("creepyFonts.typography.attractions")}</li>
            <li>{t("creepyFonts.typography.comics")}</li>
            <li>{t("creepyFonts.typography.glitch")}</li>
          </ul>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("creepyFonts.psychology.title")}</h3>
          <p>{t("creepyFonts.psychology.intro")}</p>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("creepyFonts.psychology.expectations")}</li>
            <li>{t("creepyFonts.psychology.unease")}</li>
            <li>{t("creepyFonts.psychology.decay")}</li>
            <li>{t("creepyFonts.psychology.atmosphere")}</li>
            <li>{t("creepyFonts.psychology.associations")}</li>
          </ul>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("creepyFonts.guidelines.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("creepyFonts.guidelines.sparingly")}</li>
            <li>{t("creepyFonts.guidelines.readable")}</li>
            <li>{t("creepyFonts.guidelines.context")}</li>
            <li>{t("creepyFonts.guidelines.devices")}</li>
            <li>{t("creepyFonts.guidelines.imagery")}</li>
            <li>{t("creepyFonts.guidelines.accessibility")}</li>
          </ul>
          <div class="bg-orange-50 dark:bg-orange-900/20 border border-orange-200 dark:border-orange-800 rounded-lg p-4">
            <p class="text-orange-800 dark:text-orange-200">
              {t("creepyFonts.warning")}
            </p>
          </div>
          <p class="mt-4">{t("creepyFonts.outro")}</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>