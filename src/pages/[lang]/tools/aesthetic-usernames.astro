---
import TextTransformer from '@/components/TextTransformer';
import MainLayout from '@/layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';


export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
    // Add more languages as needed
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---

<MainLayout 
  title={t("toolCategory.nameGenerators.aesthetic.title")}
  description={t("toolCategory.nameGenerators.aesthetic.description")}
>
  <TextTransformer 
    client:load
    title={t("toolCategory.nameGenerators.aesthetic.title")}
    description={t("aestheticUsernames.description")}
    transformType="aesthetic"
    placeholder={t("aestheticUsernames.input.placeholder")}
    isGenerator={true}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t("aestheticUsernames.about.title")}</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t("aestheticUsernames.about.p1")}</p>
          <p>{t("aestheticUsernames.about.p2")}</p>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("aestheticUsernames.styles.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("aestheticUsernames.styles.coreSuffix")}</li>
            <li>{t("aestheticUsernames.styles.prefixCore")}</li>
            <li>{t("aestheticUsernames.styles.numbered")}</li>
            <li>{t("aestheticUsernames.styles.symbolWrapped")}</li>
            <li>{t("aestheticUsernames.styles.special")}</li>
          </ul>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("aestheticUsernames.perfectFor.title")}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("aestheticUsernames.perfectFor.instagram")}</li>
            <li>{t("aestheticUsernames.perfectFor.discord")}</li>
            <li>{t("aestheticUsernames.perfectFor.twitter")}</li>
            <li>{t("aestheticUsernames.perfectFor.blogs")}</li>
            <li>{t("aestheticUsernames.perfectFor.gaming")}</li>
            <li>{t("aestheticUsernames.perfectFor.projects")}</li>
          </ul>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t("aestheticUsernames.trends.title")}</h3>
          <p>{t("aestheticUsernames.trends.intro")}</p>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t("aestheticUsernames.trends.softWords")}</li>
            <li>{t("aestheticUsernames.trends.coreSuffixes")}</li>
            <li>{t("aestheticUsernames.trends.separators")}</li>
            <li>{t("aestheticUsernames.trends.nature")}</li>
            <li>{t("aestheticUsernames.trends.vintage")}</li>
          </ul>
          <p class="mt-4">{t("aestheticUsernames.trends.note")}</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
