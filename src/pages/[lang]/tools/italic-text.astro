---
import MainLayout from '@/layouts/Layout.astro';
import TextTransformer from '@/components/TextTransformer';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';


export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'it' } },
    { params: { lang: 'id' } },
    { params: { lang: 'nl' } },
  ];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---
<MainLayout 
  title={t('italic.title')} 
  description={t('italic.desc')}
>
  <TextTransformer 
    client:load
    title={t('italic.title')} 
    description={t('italic.tDesc')} 
    transformType="italic"
    placeholder={t('italic.placeholder')}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t('italic.aboutTitle')}</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-300">
          <p>{t('italic.p1')}</p>
          <p>{t('italic.p2')}</p>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t('italic.how.title')}</h3>
          <ol class="list-decimal pl-5 space-y-2">
            <li>{t('italic.how.1')}</li>
            <li>{t('italic.how.2')}</li>
            <li>{t('italic.how.3')}</li>
            <li>{t('italic.how.4')}</li>
          </ol>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-2">{t('italic.use.title')}</h3>
          <ul class="list-disc pl-5 space-y-2">
            <li>{t('italic.use.1')}</li>
            <li>{t('italic.use.2')}</li>
            <li>{t('italic.use.3')}</li>
            <li>{t('italic.use.4')}</li>
            <li>{t('italic.use.5')}</li>
          </ul>

          <p class="mt-4">{t('italic.note')}</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
