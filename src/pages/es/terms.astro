---
import Layout from "../../layouts/Layout.astro";

const title = "Terms and Conditions - Invisible-Character";
const description =
  "Review the terms and conditions for using InvisibleSymbol.com.";
---

<Layout title={title} description={description}>
  <main class="container max-w-4xl mx-auto px-4 py-8">
    <div class="px-4">
      <h1 class="text-3xl font-bold mb-6 text-center">
        Términos y Condiciones
      </h1>
      <p class="mb-6 text-center text-gray-700">
        Bienvenido a <strong>InvisibleSymbol.com</strong>. Al acceder o utilizar
