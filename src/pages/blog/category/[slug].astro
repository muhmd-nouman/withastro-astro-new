---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getCategory, getPostsByCategory } from '../../../lib/wordpress';

const { slug } = Astro.params;
const category = await getCategory(slug);
const posts = await getPostsByCategory(category.id);

if (!category) {
  return Astro.redirect('/404');
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Category: ${category.name}`} description={category.description} />
	</head>
	<body class="bg-white dark:bg-black text-black dark:text-white">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-12">
			<section>
				<h1 class="text-4xl font-bold mb-8">Category: {category.name}</h1>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{posts.map((post) => (
						<article class="border border-gray-200 dark:border-gray-800 rounded-lg overflow-hidden">
							{post._embedded?.['wp:featuredmedia']?.[0]?.source_url && (
								<img
									src={post._embedded['wp:featuredmedia'][0].source_url}
									alt={post.title.rendered}
									class="w-full h-48 object-cover"
								/>
							)}
							<div class="p-4">
								<h2 class="text-xl font-semibold mb-2">
									<a href={`/blog/${post.slug}`} class="hover:underline">
										{post.title.rendered}
									</a>
								</h2>
								<div class="text-gray-600 dark:text-gray-400 text-sm mb-4">
									{new Date(post.date).toLocaleDateString()}
								</div>
								<div class="prose dark:prose-invert"
									set:html={post.excerpt.rendered}
								/>
							</div>
						</article>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>