---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getAuthor, getPostsByAuthor } from '../../../lib/wordpress';

const { id } = Astro.params;
const author = await getAuthor(id);
const posts = await getPostsByAuthor(id);

if (!author) {
  return Astro.redirect('/404');
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Author: ${author.name}`} description={author.description} />
	</head>
	<body class="bg-white dark:bg-black text-black dark:text-white">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-12">
			<section>
				<div class="mb-12 text-center">
					{author.avatar_urls?.['96'] && (
						<img
							src={author.avatar_urls['96']}
							alt={author.name}
							class="w-24 h-24 rounded-full mx-auto mb-4"
						/>
					)}
					<h1 class="text-4xl font-bold mb-4">{author.name}</h1>
					{author.description && (
						<p class="text-gray-600 dark:text-gray-400">{author.description}</p>
					)}
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{posts.map((post) => (
						<article class="border border-gray-200 dark:border-gray-800 rounded-lg overflow-hidden">
							{post._embedded?.['wp:featuredmedia']?.[0]?.source_url && (
								<img
									src={post._embedded['wp:featuredmedia'][0].source_url}
									alt={post.title.rendered}
									class="w-full h-48 object-cover"
								/>
							)}
							<div class="p-4">
								<h2 class="text-xl font-semibold mb-2">
									<a href={`/blog/${post.slug}`} class="hover:underline">
										{post.title.rendered}
									</a>
								</h2>
								<div class="text-gray-600 dark:text-gray-400 text-sm mb-4">
									{new Date(post.date).toLocaleDateString()}
								</div>
								<div class="prose dark:prose-invert"
									set:html={post.excerpt.rendered}
								/>
							</div>
						</article>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>