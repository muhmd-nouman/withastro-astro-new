---
import { getPostBySlug, getAllPostSlugs, formatDate, getRelativeTime, sanitizeContent } from '../../lib/wordpress';
import Layout from '../../layouts/BlogPost.astro';

export const prerender = false; // Enable ISR

export async function getStaticPaths() {
  const slugs = await getAllPostSlugs();
  return slugs.map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/blog');
}

const post = await getPostBySlug(slug);

if (!post) {
  return Astro.redirect('/404');
}

const featuredImage = post._embedded?.['wp:featuredmedia']?.[0];
const author = post._embedded?.author?.[0];
const categories = post._embedded?.['wp:term']?.[0] || [];
const tags = post._embedded?.['wp:term']?.[1] || [];

// Sanitize content for security
const sanitizedContent = sanitizeContent(post.content.rendered);

// SEO data
const title = post.title.rendered;
const description = post.excerpt.rendered.replace(/<[^>]*>/g, '').substring(0, 160);
const publishedTime = post.date;
const modifiedTime = post.modified;
---

<Layout 
  title={title} 
  description={description}
  ogType="article"
  ogImage={featuredImage?.source_url}
  publishedTime={publishedTime}
  modifiedTime={modifiedTime}
>
  
    <div class="container">
      <nav class="breadcrumb">
        <a href="/">Home</a>
        <span class="separator">‚Üí</span>
        <a href="/blog">Blog</a>
        <span class="separator">‚Üí</span>
        <span class="current">{post.title.rendered}</span>
      </nav>

      <article class="post">
        <header class="post-header">
          {featuredImage && (
            <div class="featured-image-container">
              <img 
                src={featuredImage.source_url}
                alt={featuredImage.alt_text || post.title.rendered}
                class="featured-image"
                width={featuredImage.media_details?.width}
                height={featuredImage.media_details?.height}
              />
            </div>
          )}

          <div class="post-meta-header">
            {categories.length > 0 && (
              <div class="categories">
                {categories.map((category) => (
                  <span class="category-tag">{category.name}</span>
                ))}
              </div>
            )}

            <h1 class="post-title" set:html={post.title.rendered} />

            <div class="post-meta">
              <div class="meta-item">
                <span class="meta-label">Published</span>
                <time datetime={post.date} title={formatDate(post.date)}>
                  {getRelativeTime(post.date)}
                </time>
              </div>

              {author && (
                <div class="meta-item">
                  <span class="meta-label">By</span>
                  <span class="author-name">{author.name}</span>
                </div>
              )}

              {post.date !== post.modified && (
                <div class="meta-item">
                  <span class="meta-label">Updated</span>
                  <time datetime={post.modified} title={formatDate(post.modified)}>
                    {getRelativeTime(post.modified)}
                  </time>
                </div>
              )}
            </div>

            <div class="live-indicator">
              üü¢ Content synced from WordPress
            </div>
          </div>
        </header>

        <div class="post-content" set:html={sanitizedContent} />

        {tags.length > 0 && (
          <footer class="post-footer">
            <div class="tags">
              <span class="tags-label">Tags:</span>
              {tags.map((tag) => (
                <span class="tag">{tag.name}</span>
              ))}
            </div>
          </footer>
        )}
      </article>

      <nav class="post-navigation">
        <a href="/blog" class="back-to-blog">
          ‚Üê Back to Blog
        </a>
      </nav>
    </div>
</Layout>

<style>
  .blog-post {
    min-height: 100vh;
    background: #f8f9fa;
    margin: 0 auto;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    color: #6c757d;
  }

  .breadcrumb a {
    color: #333;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: #000;
    text-decoration: underline;
  }

  .separator {
    color: #adb5bd;
  }

  .current {
    color: #6c757d;
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .post {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
    margin-bottom: 2rem;
  }

  .featured-image-container {
    position: relative;
    width: 100%;
    max-height: 500px;
    overflow: hidden;
  }

  .featured-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  .post-meta-header {
    padding: 2rem;
    border-bottom: 1px solid #e9ecef;
  }

  .categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .category-tag {
    background: #000000;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #212529;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }

  .meta-label {
    color: #6c757d;
    font-weight: 500;
  }

  .author-name {
    color: #0a0a0a;
    font-weight: 500;
  }

  .live-indicator {
    display: inline-block;
    background: #d4edda;
    color: #155724;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid #c3e6cb;
  }

  .post-content {
    padding: 2rem;
    font-size: 1.1rem;
    line-height: 1.8;
    color: #212529;
  }

  .post-content :global(h2) {
    font-size: 1.8rem;
    font-weight: 600;
    color: #343a40;
    margin: 2rem 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #e9ecef;
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    color: #495057;
    margin: 1.5rem 0 0.75rem 0;
  }

  .post-content :global(h4) {
    font-size: 1.3rem;
    font-weight: 600;
    color: #495057;
    margin: 1.25rem 0 0.5rem 0;
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .post-content :global(a) {
    color: #272727;
    text-decoration: none;
    transition: border-color 0.2s ease;
  }

  .post-content :global(a:hover) {
    border-bottom-color: #000000;
    color: #000;
    text-decoration: underline;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid #000000;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    background: #f8f9fa;
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: #495057;
  }

  .post-content :global(pre) {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid #e9ecef;
  }

  .post-content :global(code) {
    background: #f8f9fa;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
    font-size: 0.9em;
    color: #e83e8c;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .post-footer {
    padding: 1.5rem 2rem;
    border-top: 1px solid #e9ecef;
    background: #f8f9fa;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
  }

  .tags-label {
    font-weight: 600;
    color: #495057;
  }

  .tag {
    background: #6c757d;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .post-navigation {
    text-align: center;
  }

  .back-to-blog {
    display: inline-block;
    background: #0b0b0b;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .back-to-blog:hover {
    background: #000000;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-meta-header,
    .post-content,
    .post-footer {
      padding: 1.5rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 0.75rem;
    }

    .breadcrumb {
      font-size: 0.8rem;
    }

    .current {
      max-width: 150px;
    }
  }
</style>