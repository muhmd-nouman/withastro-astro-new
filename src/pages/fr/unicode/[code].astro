---
import CharacterDetail from '@/components/CharacterDetails.astro';
import { getLangFromUrl } from '../../../utils/i18n';
import { unicodeData } from '../../../data/unicodeData';
import Layout from '@/layouts/Layout.astro';
export function getStaticPaths() {
  return unicodeData.map((char) => ({
    params: { code: char.code.toLowerCase() },
    props: { char },
  }));
}
const { char } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const displayName = char.name?.[lang] ?? char.name?.["en"] ?? "Unknown";
const displayDesc = char.description?.[lang] ?? char.description?.["en"] ?? "";

export const prerender = true;
---
<Layout 
  title= `Unicode ${char.code} Symbole | Copier et Coller (${char.symbol}) Signe`
  description=`${char.symbol} Unicode ${char.code}, connu sous le nom de. Copiez et collez ${char.code} facilement pour vos besoins. Parfait pour les astuces de mise en forme, et plus encore!`
>
  <CharacterDetail char={char} lang={lang} />
</Layout>
