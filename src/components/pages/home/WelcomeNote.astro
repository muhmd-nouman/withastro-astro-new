---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="container mx-auto py-12 mt-8 px-6 md:px-8">
  <p class="max-w-4xl mx-auto text-md md:text-lg text-center text-black">
    {t("welcome_message")}
  </p>
</section>

<section class="container mx-auto py-12 px-6 md:px-8">
  <div>
    <h2 class="text-2xl md:text-3xl font-bold items-center text-center text-black mb-4">
      {t("what_are_invisible_letters.heading")}
    </h2>
    <p class="max-w-4xl mx-auto text-md md:text-lg text-center text-black">
      {t("what_are_invisible_letters.description")}
    </p>
  </div>
</section>
