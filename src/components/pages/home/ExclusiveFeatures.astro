---
import { CldImage } from 'astro-cloudinary';
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const features = [
  {
    image: "https://res.cloudinary.com/dtbfvwis8/image/upload/v1751148698/user-check_gkrthr.svg",
    alt: "User Friendly Interface",
    titleKey: t("user_friendly.heading2"),
    descriptionKey: t("user_friendly.description")
  },
  {
    image: "https://res.cloudinary.com/dtbfvwis8/image/upload/v1751148698/user-check_gkrthr.svg", 
    alt: "Multiple Methods Available",
    titleKey: t("multiple_method.heading2"),
    descriptionKey: t("multiple_method.description")
  },
  {
    image: "https://res.cloudinary.com/dtbfvwis8/image/upload/v1751148696/globe_hzzwkk.svg",
    alt: "Multi-language Support", 
    titleKey: t("language_support.heading"),
    descriptionKey: t("language_support.description")
  }
];
---

<section id="exclusive_features" class="py-12 md:px-2">
  <div class="space-y-12">
    <!-- Section Header -->
    <div class="text-center px-4">
      <h2 class="text-2xl md:text-3xl font-bold text-black">
        {t("exclusive_features.heading1")}
      </h2>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 px-6">
      {features.map(({ image, alt, titleKey, descriptionKey }) => (
        <div class="bg-gray-50 rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300 border border-gray-100">
          <div class="mb-4">
            <CldImage
              src={image}
              alt={alt}
              width={32}
              height={32}
            />
          </div>
          <h3 class="text-xl md:text-2xl font-semibold text-black mb-4">
            {titleKey}
          </h3>
          <p class="text-md md:text-lg text-gray-600">
            {descriptionKey}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>