---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<aside class="bg-white p-6 rounded-lg border border-gray-200">
  <!-- Tools Section -->
  <div class="mb-8">
    <h3 class="text-lg font-semibold text-primary mb-4 pb-2 border-b-2 border-secondary">
      {t("sidebar.tools")}
    </h3>
    <ul class="space-y-2">
      <li>
        <a href="/" class="flex items-center gap-2 text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
          </svg>
          {t("sidebar.invisible_character")}
        </a>
      </li>
      <li>
        <a href="/tools/invisible-text-detector/" class="flex items-center gap-2 text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="16"></line>
            <line x1="8" y1="12" x2="16" y2="12"></line>
          </svg>
          {t("sidebar.hidden_text_detector")}
        </a>
      </li>
      <li>
        <a href="/tools/invisible-text-detector/" class="flex items-center gap-2 text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="4 7 4 4 20 4 20 7"></polyline>
            <line x1="9" y1="20" x2="15" y2="20"></line>
            <line x1="12" y1="4" x2="12" y2="20"></line>
          </svg>
          {t("sidebar.blank_space_previewer")}
        </a>
      </li>
    </ul>
  </div>

  <!-- Categories Section -->
  <div class="mb-8">
    <h3 class="text-lg font-semibold text-primary mb-4 pb-2 border-b-2 border-secondary">
      {t("sidebar.categories")}
    </h3>
    <ul class="space-y-2">
      <li><a href="#" class="block text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">{t("sidebar.symbols")}</a></li>
      <li><a href="#" class="block text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">{t("sidebar.emojis")}</a></li>
      <li><a href="#" class="block text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">{t("sidebar.mathematical")}</a></li>
      <li><a href="#" class="block text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">{t("sidebar.arrows")}</a></li>
      <li><a href="#" class="block text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">{t("sidebar.currency")}</a></li>
    </ul>
  </div>

  <!-- Resources Section -->
  <div>
    <h3 class="text-lg font-semibold text-primary mb-4 pb-2 border-b-2 border-secondary">
      {t("sidebar.resources")}
    </h3>
    <ul class="space-y-2">
      <li><a href="#" class="block text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">{t("sidebar.unicode_standards")}</a></li>
      <li><a href="#" class="block text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">{t("sidebar.documentation")}</a></li>
      <li><a href="#" class="block text-gray-700 hover:text-primary hover:bg-accent p-2 rounded-md transition-colors">{t("sidebar.api_reference")}</a></li>
    </ul>
  </div>
</aside>
