---
import "@/styles/global.css";
import '@fontsource/kanit';
import Navbar from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  lang: string;
}

const { title, lang = "en" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Unicode and Typography Explorer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | {"site.title"}</title>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5965676121872704"
     crossorigin="anonymous"></script>
    </head>
  <body class="min-h-full flex flex-col bg-white text-gray-800">
    <Navbar />
    <main class="flex-1 max-w-5xl mx-auto px-4 py-8 w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>
